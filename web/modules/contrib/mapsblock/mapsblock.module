<?php

/**
 * @file
 * Contains mapsblock.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function mapsblock_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the mapsblock module.
    case 'help.page.mapsblock':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provides a block which renders Google map on address input.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function mapsblock_theme($existing, $type, $theme, $path) {
  return [
    'mapsblock' => [
      'variables' => [
        'address' => NULL,
        'api_key' => NULL,
      ],
    ],
  ];
}
